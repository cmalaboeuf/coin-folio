{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },

    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2017 ,
        "sourceType": "module"
    },
    "rules": {
        "arrow-parens": 0,
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
